    "import nltk\n",
    "from nltk.chat.util import Chat, reflections\n",
    "\n",
    "# Define chatbot responses\n",
    "pairs = [\n",
    "    ['hi', ['hello', 'hi']],\n",
    "    ['how are you', ['good', 'fine']],\n",
    "]\n",
    "\n",
    "# Create chatbot instance\n",
    "chatbot = Chat(pairs, reflections)\n",
    "\n",
    "# Start chatting\n",
    "chatbot.converse()\n"
   ]
